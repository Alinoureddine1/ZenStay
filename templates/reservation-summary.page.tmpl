{{template "base" .}}

{{define "content"}}
{{$res := index .Data "reservation"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class ="mt-5">reservation Summary</h1>
                <hr>
                <table class ="table table-striped">
                    <tbody>
                    <tr>
                        <td>First Name</td>
                        <td>{{$res.FirstName}}</td>
                    </tr>
                    <tr>
                        <td>Last Name</td>
                        <td>{{$res.LastName}}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{$res.Email}}</td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>{{$res.Phone}}</td>
                    </tr>
                    <tr>
                        <td>Arrival: </td>
                        <td>{{index .Data "reservation" "CreatedAt"}}</td>
                    </tr>
                    <tr>
                        <td>Departure:</td>
                        <td>{{index .Data "reservation" "UpdatedAt"}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{end}}
