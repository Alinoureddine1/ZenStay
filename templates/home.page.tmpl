
{{template "base" .}}

{{define "css"}}
<link rel="stylesheet" href="css/style.css">
{{end}}

{{define "content"}}
<!-- Header section -->
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">ZenStay</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Browse Hotels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Deals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Hero section -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Welcome to ZenStay</h1>
                <p>Your perfect hotel room is just a few clicks away. Book with us and experience a seamless and stress-free room booking process.</p>
                <a href="#" class="btn btn-primary">Get Started</a>
            </div>
            <div class="col-md-6">
                <img src="images/hero-image.jpg" alt="Hotel room image" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Search section -->
<section class="search">
    <div class="container">
        <h2>Find your perfect hotel room</h2>
        <form action="#" method="get">
            <div class="form-row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Destination" required>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" placeholder="Check-in" required>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" placeholder="Check-out" required>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</section>
{{end}}

{{define "js"}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-dGQ7tuDlM4U2b4x9j9q2qGPtW1d8q3l3+hfrjwFRb1wWpTlkmA7dXzncA2Q0B0W8" crossorigin="anonymous"></script>
{{end}}

